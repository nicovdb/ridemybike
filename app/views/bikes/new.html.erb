<div class="container">

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="block">
          <h1>Add a bike</h1>

            <%= simple_form_for @bike do |f| %>
              <%= f.input :title %>
              <%= f.input :category, collection: Bike::CATEGORIES %>
              <%= f.input :address %>
              <%= f.input :description %>
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
              <%= f.button :submit, { class: "btn btn-success"} %>
            <% end %>

          <%= link_to "< Back to Bikes", bikes_path %>
        </div>
      </div>
    </div>
</div>
