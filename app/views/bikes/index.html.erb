
<div class="wrapper">
  <div class="research form form-inline">
    <%= simple_form_for :search, url: bikes_path, method: :get do |f| %>
      <%= f.input :query, as: :string, input_html: { value: params[:query], id: "flat_address" }, label: false, class: "form-control", placeholder: "Type an address" %>
      <%= f.input :category, collection: Bike::CATEGORIES, label: false, class: "form-control", input_html: { placeholder: "Chose a category"} %>
      <%= f.button :submit, 'Ride!', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="main_container">


    <div id="map" class="hidden-xs hidden-sm" style="width: 100%; height: 100vh;" data-markers="<%= @markers.to_json %>"></div>

  <div class="cards-container container-fluid">



    <div class="row">
    <% @bikes.each do |bike| %>

      <div class="col-xs-12 col-sm-12 col-md-6">
        <div class="card">

            <div class="card-photo" style="background-image: url('<%= default_path_photo(bike) %>');"></div>

          <div class="card-infos">
            <h6><strong><%= link_to bike.title, bike_path(bike) %></strong></h6>
            <P><%= bike.category %></p>
            <p class="card-address"><%= bike.address %></p>
          </div>

        </div>
      </div>

    <% end %>
    </div>

  </div>

</div>
