

<h1>BIKES</h1>



<% @bikes.each do |bike| %>
<div class="card">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card-photo">
        <%= default_photo(bike) %>
      </div>
      <div class="infos">
        <h3><%= link_to bike.title, bike_path(bike) %></h3>
        <h4><%= bike.category%></h4>
        <p><%= bike.description%></p>
      </div>
    </div>
  </div>
</div>
<% end %>
